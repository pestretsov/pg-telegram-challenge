<resources>

    <style name="TelegramActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TelegramAuthHintTextStye">
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">#999999</item>
    </style>

    <style name="TelegramDefaultTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">#333333</item>
    </style>

    <style name="ChatListItemTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="titleTextSize">18sp</item>
        <item name="android:textColor">#8a8a8a</item>
        <item name="titleTextColor">#222222</item>

        <item name="timeTextSize">14sp</item>
        <item name="counterTextSize">12sp</item> <!--it's not like in guidelines -->
        <item name="counterColor">#6ECE82</item>
        <item name="errorColor">#E48283</item>
        <item name="counterTextColor">#FFFFFF</item>
    </style>

    <style name="BaseChatItemViewStyle">
        <item name="barMessageTextSize">14sp</item>
        <item name="barMessageTextColor">#579bcf</item>
        <item name="barColor">#EBF2F7</item>
        <item name="dateTextSize">16sp</item>
        <item name="dateTextColor">#333333</item>
    </style>

    <style name="BaseUserMessageViewStyle" parent="BaseChatItemViewStyle">
        <item name="titleTextSize">15sp</item>
        <item name="titleTextColor">#569ace</item>

        <item name="timeTextSize">13sp</item>
        <item name="timeTextColor">#b2b2b2</item>
    </style>

    <style name="TextUserMessageViewStyle" parent="BaseUserMessageViewStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#333333</item>
        <item name="linkColor">#569ace</item>
    </style>

    <!-- Base application theme. -->
    <style name="TelegramTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/primary_telegram_blue</item>

        <item name="colorControlNormal">@color/default_telegram_grey</item>
        <item name="colorControlActivated">@color/accent_telegram_blue</item>
        <item name="android:actionBarStyle">@style/TelegramActionBar</item>

        <item name="android:textColorHint">@color/test_color</item>

        <item name="myDrawable">@drawable/ic_check</item>
    </style>

    <style name="MaterialDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>
