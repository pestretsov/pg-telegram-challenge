<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <!-- Set the border color of your layout here -->
            <stroke android:width="1dp" android:color="#e9e9e9" />
            <solid android:color="#e9e9e9" />

        </shape>
    </item>

    <item android:top="1dp">
        <shape
            android:shape="rectangle">
            <!-- Set the background color of your layout here -->
            <stroke android:width="1dp" android:color="@color/default_telegram_white" />
            <solid android:color="@color/default_telegram_white" />
        </shape>
    </item>
</layer-list>