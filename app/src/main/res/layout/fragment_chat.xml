<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.pg.telegramchallenge.ChatFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_recycler_view"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:animateLayoutChanges="false"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@drawable/chat_edittext_divider">

        <ImageView
            android:id="@+id/btn_left"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_smiles"
            android:scaleType="center"
            android:layout_gravity="left|bottom"
            />

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:imeActionId="@+id/send"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:background="@android:color/transparent"
            android:hint="@string/message_input_hint"
            />

        <ImageView
            android:id="@+id/btn_right1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_attach" />

        <ImageView
            android:id="@+id/btn_right2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_mic"/>

        <ImageView
            android:id="@+id/btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:scaleType="center"
            android:src="@drawable/ic_send"/>

    </LinearLayout>

</LinearLayout>
