<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.pg.telegramchallenge.EmptyFragment">


    <org.pg.telegramchallenge.views.ChatListItemView
        style="@style/ChatListItemTextStyle"
        android:id="@+id/sample_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:titleText="Nicolas Cage"
        android:text="Sample text, lorem ipsum"
        android:padding="16dp"
    />
    <org.pg.telegramchallenge.views.ChatListItemView
            style="@style/ChatListItemTextStyle"
            android:id="@+id/sample_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:titleText="Artemy Pestretsov"
            android:text="mister president, are you fucking kidding me?"
            android:padding="16dp"
            android:layout_below="@+id/message" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <org.pg.telegramchallenge.views.TextUserMessageView
            style="@style/TextUserMessageViewStyle"
            android:padding="16dp"
            auto:titleText="Artemy Pestrtsov"
            android:layout_below="@id/sample_view_2"
            android:text="Privet, rodnaya, ahahaha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <org.pg.telegramchallenge.views.TextUserMessageView
            style="@style/TextUserMessageViewStyle"
            android:text="Privet, top kek. Ya lubil tebya kak rodnogo, ah ti gnida neblagodarnaya"
            android:padding="16dp"
            auto:titleText="Top Kek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:layout_below="@+id/sample_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
